<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/title_view_img"/>

    <com.github.ring.CircleProgress
        android:id="@+id/circleprogress"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        app:decimalPointLength="1"
        app:disableAngle="0"
        app:duration="1000"
        app:isClockwise="true"
        app:isDecimal="true"
        app:isRound="true"
        app:isShowPercentText="true"
        app:maxProgress="200"
        app:neiYuanColor="@color/transparent"
        app:progress="0"
        app:ringColor="@color/top_color1"
        app:ringProgressColor="@color/blue_00"
        app:ringRadius="90dp"
        app:ringWidth="10dp"
        app:textColor="@color/blue_00"
        app:textSize="22sp"
        app:useAnimation="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="请尽量使手机和设备靠近"
        android:textColor="@color/word_black"
        android:textSize="14sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="10dp"
        android:text="·    搜索设备"
        android:textColor="@color/word_black"
        android:textSize="14sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="10dp"
        android:text="·    连接设备"
        android:textColor="@color/word_black"
        android:textSize="14sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="10dp"
        android:text="·    设备开锁"
        android:textColor="@color/word_black"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/tv_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="--"
        android:textColor="@color/word_black"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/tv_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_round_orange"
        android:gravity="center"
        android:minHeight="30dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="开始搜索"
        android:textColor="@color/white"
        android:textSize="14sp"/>
</LinearLayout>