<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.userAct.BankCardActivity">

    <LinearLayout
        android:id="@+id/lls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:orientation="horizontal"
        android:minHeight="45dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_qx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="取消"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/mon_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_weight="8"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:text="绑定银行卡"
            android:textColor="@color/white"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/mon_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="明细"
            android:textColor="@color/colorAccent"
            android:textSize="14sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lls1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:minHeight="45dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/lls">

        <TextView
            android:id="@+id/tv_kahao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="卡号:"
            android:layout_weight="1"
            android:textSize="18sp"/>

        <EditText
            android:id="@+id/et_cardno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_weight="8"
            android:inputType="number"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:background="@null"/>
    </LinearLayout>

    <View
        android:id="@+id/v1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        app:layout_constraintTop_toBottomOf="@id/lls1"
        android:background="@color/gray_5"/>

    <LinearLayout
        android:id="@+id/lls2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:minHeight="45dp"
        app:layout_constraintTop_toBottomOf="@id/v1">

        <TextView
            android:id="@+id/tv_xingming"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="姓名:"
            android:layout_weight="1"
            android:textSize="18sp"/>

        <EditText
            android:id="@+id/et_fname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_weight="8"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:background="@null"/>
    </LinearLayout>

    <View
        android:id="@+id/v2"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        app:layout_constraintTop_toBottomOf="@id/lls2"
        android:background="@color/gray_5"/>

    <LinearLayout
        android:id="@+id/lls3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:minHeight="45dp"
        app:layout_constraintTop_toBottomOf="@id/v2">

        <TextView
            android:id="@+id/tv_kaihuhang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="开户行:"
            android:layout_weight="1"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tv_khh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_weight="8"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:hint="点击选择"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_sub"
        android:layout_width="240dp"
        android:layout_height="45dp"
        app:layout_constraintTop_toBottomOf="@id/lls3"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        android:background="@color/colorAccent"
        android:text="提交"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:textColor="@color/white"/>
</android.support.constraint.ConstraintLayout>