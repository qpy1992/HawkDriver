<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.userAct.BankCardActivity">

    <LinearLayout
        android:id="@+id/lls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:orientation="horizontal"
        android:minHeight="45dp">

        <TextView
            android:id="@+id/tv_qx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="取消"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/mon_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_weight="8"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:text="绑定银行卡"
            android:textColor="@color/white"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/mon_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="明细"
            android:textColor="@color/colorAccent"
            android:textSize="14sp"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="请绑定持卡人本人的银行卡"
        android:textSize="12sp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"/>

    <LinearLayout
        android:id="@+id/lls2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:minHeight="45dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp">

        <TextView
            android:id="@+id/tv_xingming"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="left"
            android:text="持卡人:"
            android:layout_weight="1"
            android:textSize="18sp"/>

        <EditText
            android:id="@+id/et_fname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_weight="4"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:background="@null"
            android:enabled="false"/>
    </LinearLayout>

    <View
        android:id="@+id/v1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_5"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

    <LinearLayout
        android:id="@+id/lls1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:minHeight="45dp"
        android:layout_marginLeft="10dp">

        <TextView
            android:id="@+id/tv_kahao"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="left"
            android:text="卡号:"
            android:layout_weight="1"
            android:textSize="18sp"/>

        <EditText
            android:id="@+id/et_cardno"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_weight="4"
            android:inputType="number"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:background="@null"/>
    </LinearLayout>

    <View
        android:id="@+id/v4"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_5"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

    <LinearLayout
        android:id="@+id/lls4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:minHeight="45dp"
        android:layout_marginLeft="10dp">

        <TextView
            android:id="@+id/tv_mobile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="left"
            android:text="手机号:"
            android:layout_weight="1"
            android:textSize="18sp"/>

        <EditText
            android:id="@+id/et_mobile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_weight="4"
            android:inputType="number"
            android:layout_gravity="center"
            android:textSize="12sp"
            android:background="@null"
            android:hint="在银行预留的手机号"/>
    </LinearLayout>

    <View
        android:id="@+id/v2"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_5"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

    <LinearLayout
        android:id="@+id/lls3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:minHeight="45dp"
        android:layout_marginLeft="10dp">

        <TextView
            android:id="@+id/tv_kaihuhang"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="left"
            android:text="开户行地区:"
            android:layout_weight="1"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tv_khh"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_weight="2.5"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textSize="16sp"
            android:hint="点击选择"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_sub"
        android:layout_width="240dp"
        android:layout_height="45dp"
        android:background="@drawable/btn_shape"
        android:text="提交"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:textSize="18sp"
        android:textColor="@color/white"/>
</LinearLayout>